#shape of mtx
num_rois = len(stim_results_roi)
num_blocks = len(stim_results_roi[0])
num_trials = len(stim_results_roi[0][0])
results_mtx = np.zeros((num_rois, num_blocks, num_trials), dtype = object)

for roi_index, (stim_results, rest_results) in enumerate(zip(stim_results_roi, rest_results_roi)):
    for block_index, (stim_trial_results, rest_trial_results) in enumerate(zip(stim_results, rest_results)):
            for trial_index, (stim_above_thr, rest_above_thr) in enumerate(zip(stim_trial_results, rest_trial_results)):
                results_mtx[roi_index, block_index, trial_index] = stim_above_thr
                #results_mtx[roi_index, block_index, trial_index,1] = rest_above_thr
                
directory = 'D:/2P/E/2023_09_25/'
np.save(directory +'test_results_mtx.npy', results_mtx)
